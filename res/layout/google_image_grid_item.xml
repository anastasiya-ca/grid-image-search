<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivThumbImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/thumb_image_content_description"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvImageShortTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivThumbImage"
        android:layout_alignStart="@+id/ivThumbImage"
        android:layout_below="@+id/ivThumbImage"
        android:layout_margin="5dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/image_title_default_string"
        android:textSize="12sp" />

</RelativeLayout>